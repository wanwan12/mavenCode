<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cb_dialog_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cb_dialog_background"
    android:gravity="center"
    android:orientation="vertical">


    <com.zhl.cbdialog.AVLoadingIndicatorView
        android:id="@+id/loading_avload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:AVLoadingIndicator="BallBeat"
        app:AVLoadingIndicatorColor="@color/blue_btn_bg_color" />

    <TextView
        android:id="@+id/tv_loading"
        style="@style/dialog_msg_style"
        android:gravity="center"
        android:padding="10dp"
        android:text="loading..."
        android:textSize="16sp" />


</LinearLayout>