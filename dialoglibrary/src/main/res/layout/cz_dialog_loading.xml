<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/com.cb.cbdialog.pnikosis.materialishprogress"
    android:id="@+id/cb_dialog_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cb_dialog_background"
    android:gravity="center"
    android:orientation="vertical">


    <com.zhl.cbdialog.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/loading_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        wheel:progressIndeterminate="true" />

    <TextView
        android:id="@+id/tv_loading"
        style="@style/dialog_msg_style"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="loading..."
        android:textSize="16sp" />
</LinearLayout>